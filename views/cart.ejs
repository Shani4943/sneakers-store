<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Your Shopping Cart</h1>

    <!-- Navigation -->
    <nav>
        <ul>
            <li><a href="/users/store">Store</a></li>
            <li><a href="/users/cart">Cart</a></li>
            <li><a href="/users/wishlist">Wishlist</a></li>
            <li><a href="/users/giftcard">Buy Gift Card</a></li>  
            <li><a href="/users/contact">Contact Us</a></li>
            <li><a href="/users/terms">Regulations and Terms</a></li>
            <li><a href="/users/logout">Logout</a></li>
        </ul>
    </nav>

    <!-- Cart Items -->
    <ul id="cart-items">
        <% if (cart.length > 0) { %>
            <% cart.forEach(function(item) { %>
                <li data-title="<%= item.title %>">
                    <strong><%= item.title %></strong> - $<%= item.price.toFixed(2) %> 
                    <% if (item.image) { %>
                        <img src="<%= item.image %>" alt="<%= item.title %>" style="max-width: 100px;">
                    <% } %>

                    <!-- Quantity Control -->
                    <div style="display: inline-block;">
                        <button class="decrease-quantity">-</button>
                        <span class="item-quantity"><%= item.quantity %></span>
                        <button class="increase-quantity">+</button>
                    </div>

                    <!-- Remove Item -->
                    <form action="/users/store/remove-from-cart" method="POST" style="display:inline;">
                        <input type="hidden" name="title" value="<%= item.title %>">
                        <button type="submit">Remove</button>
                    </form>
                </li>
            <% }); %>
        <% } else { %>
            <p>Your cart is empty. <a href="/users/store">Add items from the store</a>.</p>
        <% } %>
    </ul>

    <!-- Checkout Button -->
    <% if (cart.length > 0) { %>
        <form action="/users/checkout" method="GET">
            <button type="submit">Checkout</button>
        </form>
    <% } %>

    <script>
        document.querySelectorAll('.increase-quantity').forEach(button => {
            button.addEventListener('click', function() {
                const title = this.closest('li').getAttribute('data-title');
                fetch('/users/store/increase-quantity', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ title: title })
                }).then(response => response.json())
                  .then(data => {
                      if (data.success) {
                          const quantityElement = this.closest('li').querySelector('.item-quantity');
                          quantityElement.textContent = parseInt(quantityElement.textContent) + 1;
                      }
                  });
            });
        });

        document.querySelectorAll('.decrease-quantity').forEach(button => {
            button.addEventListener('click', function() {
                const title = this.closest('li').getAttribute('data-title');
                fetch('/users/store/decrease-quantity', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ title: title })
                }).then(response => response.json())
                  .then(data => {
                      if (data.success) {
                          const quantityElement = this.closest('li').querySelector('.item-quantity');
                          const newQuantity = parseInt(quantityElement.textContent) - 1;
                          if (newQuantity > 0) {
                              quantityElement.textContent = newQuantity;
                          } else {
                              this.closest('li').remove(); // Remove the item if quantity is 0
                          }
                      }
                  }).catch(error => console.error('Error:', error));
            });
        });
        
    </script>

</body>
</html>
